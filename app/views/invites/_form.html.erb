<div class="form-container">

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p> <%= error %> <p>
    <% end %>
<% end %>

<%= form_for @invite, html: {class: 'form-basic'} do |f| %>
    <div class='form-input'>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class='form-input'>
      <%= f.label :event %>
      <%= f.collection_select :event_id, @events, :id, :name %>
    </div>

    <div class='form-input'>
      <%= f.label :user %>
      <%= f.collection_select :user_id, @users, :id, :name %>
    </div>

    <%= f.submit %>
  <% end %>
  </div>